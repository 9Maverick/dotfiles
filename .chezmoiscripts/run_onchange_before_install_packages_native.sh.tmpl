#!/bin/bash

if ! command -v packinstall >/dev/null 2>&1; then
  echo
  echo ">>>packinstall could not be found, starting installation"
  echo
  curl -fsSL https://raw.githubusercontent.com/9Maverick/Packinstall/main/install.sh | bash
  echo
fi

{{ range .packages.native.level0 -}}
packinstall {{ . }}
{{ end -}}
{{- if ge .level 1}}
{{ range .packages.native.level1 -}}
packinstall {{ . }}
{{ end -}}
{{ end }}
{{- if ge .level 2}}
{{ range .packages.native.level2 -}}
packinstall {{ . }}
{{ end -}}
{{ end }}
{{- if ge .level 3}}
{{ range .packages.native.level3 -}}
packinstall {{ . }}
{{ end -}}
{{ end }}
