{{- if eq .level 0}}
palette = "level-0"

format = """
[→](fg:white)\
$hostname\
[→](bg:user_background fg:red)\
$username\
[→](fg:yellow bg:loaction_background)\
$directory\
[→](fg:black bg:white)\
$git_branch\
$git_state\
$git_status\
$git_metrics\
[→](fg:white bg:blue)\
$docker_context\
[→ ](fg:blue)\
"""
{{else}}
palette = "level-1" 

format = """
[](system_background)\
$os\
$hostname\
[](bg:user_background fg:system_background)\
$username\
[](fg:user_background bg:loaction_background)\
$directory\
[](fg:loaction_background bg:white)\
$git_branch\
$git_state\
$git_status\
$git_metrics\
[](fg:white bg:blue)\
$docker_context\
[ ](fg:blue)\
"""
{{- end }}

command_timeout = 5000

# A continuation prompt that displays two filled-in arrows

continuation_prompt = '▶▶ '

[palettes.level-0]
system_background = "black"
user_background = "black"
loaction_background = "black"

[palettes.level-1]
system_background = "#3B4252"
user_background = "#434C5E"
loaction_background = "#4C566A"


[os]
style = "bg:#3B4252"
format = "[ $symbol]($style)"
disabled = false

[hostname]
ssh_symbol = "  "
ssh_only = false
style = "bg:system_background"
format = '[$ssh_symbol](bold blue bg:#3B4252)[$hostname ](bold red bg:#3B4252)'
disabled = false

# You can also replace your username with a neat symbol like  to save some space
[username]
show_always = true
style_user = "bg:#434C5E fg:yellow"
style_root = "bg:#434C5E fg:red"
format = "[ $user ]($style)"

[directory]
read_only = "󰌾 "
style = "bg:#4C566A"
format = "[ $path $read_only]($style)"
truncation_length = 3
truncation_symbol = "…/"

[git_branch]
symbol = ""
style = "bg:white fg:black"
format = '[ $symbol $branch ]($style)'

[git_state]
format = '[\($state( $progress_current of $progress_total)\)]($style) '
cherry_pick = '[ PICKING](bold red)'

[git_status]
style = "bg:white fg:black"
format = '[$all_status$ahead_behind ]($style)'

[git_metrics]
added_style = 'bold green'
deleted_style = 'bold red'
format = '[$added]($added_style)/[$deleted]($deleted_style) '

